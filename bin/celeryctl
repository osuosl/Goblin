#!/bin/sh

host=`hostname -s`
base=/vol/goblin

start(){
	. $base/bin/goblin
	echo -n Starting celeryd ..
	celeryd --autoscale=50,5 --loglevel=INFO -Q optin -n $host &
	echo done
}

stop(){
	pkill -f celeryd -u dennis
	echo -n "Stopping celeryd .."
	if status; then
		while status; do
			sleep 1
			echo -n .
		done
	fi
	echo celeryd stopped
}

status(){
	ps -elf | grep -v grep | grep dennis | grep -q celeryd
	return $?
}

restart(){
	if status; then
		stop
		while status; do
			sleep 1
		done
		start
	else
		start
	fi
}

cmd=$1
if [ "$cmd" = "start" ]; then
	start
elif [ "$cmd" = "stop" ]; then
	stop
elif [ "$cmd" = "restart" ]; then
	restart
elif [ "$cmd" = "status" ]; then
	if status; then
		echo celeryd is running
	else
		echo celeryd is not running
	fi
else
	echo "Error: expecting one of -- start, stop, status, or restart"
fi

